<p id="notice"><%= notice %></p>
<body>
   <center>
      <table bgcolor="#f6f6ef" border="0" cellpadding="0" cellspacing="0" width="85%">
         <tbody>
            <tr>
               <td bgcolor="ff6600">
                  <table style="padding:2px" border="0" cellpadding="0" cellspacing="0" width="100%">
                     <tbody>
                        <tr>
                           <td style="width:18px;padding-right:4px;">
                              <a href="/submissions">
                              <img src="https://news.ycombinator.com/y18.gif" style="border: 1px #ffffff solid;" width="18" height="18">
                              </a>
                           </td>
                           <td style="line-height: 12pt; height: 10px;">
                              <span class="headerPage">
                              <b>
                              <a href="/submissions">Hacker News</a>
                              </b>
                              <span style="display:inline-block; width: 2px;"></span>
                              <a href="#">welcome</a>
                              |
                              <a href="#">new</a>
                              |
                              <a href="#">comments</a>
                              |
                              <a href="#">show</a>
                              |
                              <a href="#">ask</a>
                              |
                              <a href="#">jobs</a>
                              |
                              <a href="/submissions/new">submit</a>
                              </span>
                           </td>
                           <td style="text-align: right;padding-right: 4px;">
                              <span class="headerPage">
                              <% if current_user %>
        						    <a href="/users/<%= current_user.id %>"><strong><%= current_user.name %></strong></a>
        						        <%= link_to "logout", signout_path, id: "sign_out" %>
      						         <% else %>
        						        <%= link_to "login", "/auth/google_oauth2", id: "sign_in" %>
      						         <% end %>
                              </span>
                           </td>
                        </tr>
                     </tbody>
                  </table>
               </td>
            </tr>
            <tr style="height: 10px"></tr>
              <tr>
                <td valign="bottom">
                <div class="container">
                   <p>
                      name:
                      <%= @user.name %>
                   </p>
                   <p>
                      created:
                      <% time = Time.now - @user.created_at %>
                      <% if time > (3600*24)*7 %>
                        <%= @user.created_at.day %>/<%= @user.created_at.month %>/<%= @user.created_at.year %>
                      <% elsif time < 3600 %>
                        <%= (time/60).round %> minutes ago 
                      <% elsif time >= 3600 && time < 3600*24 %>
                        <%= (time/3600).round %> hours ago                    
                      <% elsif time >= 3600*24 %>
                        <% if time < 3600*48 %>
                          <%= (time/(3600*24)).round %> day ago
                        <% else %>
                          <%= (time/(3600*24)).round %> days ago 
                        <% end %>
                      <% end %>
                   </p>
                   <p>
                      karma:
                      <%= @user.karma %>
                   </p>
                   <p>
                      <% if current_user && current_user.id == @user.id %>
                        <p>
                          email:
                          <%= @user.email %>
                        </p>
                          <%= render 'form', user: @user %>
                      <% else %>
                        <p>
                          about:
                          <%= @user.about %>
                        </p>
                      <% end %>
                   </p>
                  </div>
                </td>
              </tr>
    </table>
</center>
</body>


