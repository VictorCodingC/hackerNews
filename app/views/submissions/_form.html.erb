<%= form_for(@submission) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  
  <div class="message">
    <strong><%= f.label " or" %></strong>
  </div>
  <br>
  
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
  <br>
  <div class="message">
    <%= f.label "Leave url blank to submit a question for discussion."%>
  </div>
  
  <div class="message">
    <%= f.label "If there is no url, the text (if any) will appear at the top of the thread."%>
  </div>
  
  
<% end %>